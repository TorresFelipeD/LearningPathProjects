@model Curso;

@{
    ViewData["Title"] = "Creación de Curso";
}

<div>
    <h1>@ViewData["Title"]</h1>
    @{
        if (ViewBag.Success != null)
        {
            if (ViewBag.Success)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Error en Formulario
                    @* <div asp-validation-summary="All">
                        </div> *@
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }
    }

    <form method="post">
        <div>
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="form-text text-danger"></span>
        </div>
        <div>
            <label asp-for="Address">Dirección</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div>
            <label asp-for="TipoJornada">Jornada</label>
            @Html.DropDownList(
            "Jornada",
            Html.GetEnumSelectList<TiposJornada>(),
            "-Seleccionar-",
            new {@class="form-control"}
            )
        </div>
        <input class="btn btn-outline-secondary mt-3" type="submit">
    </form>
</div>
